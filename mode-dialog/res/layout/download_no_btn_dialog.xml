<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/upgradle_dialog_head_image_margin_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/upgradle_dialog_content_margin_left"
            android:layout_marginRight="@dimen/upgradle_dialog_content_margin_left"
            android:layout_marginTop="@dimen/upgradle_dialog_background_margin_top"
            android:background="@drawable/info_centent_view_shap"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/dialog_message_ll_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/upgradle_dialog_subhead_title_margin_top"
                android:layout_gravity="center|top"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/dialog_main_head_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/upgradle_dialog_head_image_height"
            android:scaleType="fitXY" />
    </RelativeLayout>
</LinearLayout>
