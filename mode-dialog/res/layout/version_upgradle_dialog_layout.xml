<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_main_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/upgradle_dialog_main_head_text_size" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/upgradle_dialog_head_image_margin_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/upgradle_dialog_content_margin_left"
            android:layout_marginRight="@dimen/upgradle_dialog_content_margin_left"
            android:layout_marginTop="@dimen/upgradle_dialog_background_margin_top"
            android:background="@drawable/info_centent_view_shap"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_subhead_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/upgradle_dialog_subhead_title_margin_top"
                android:gravity="center"
                android:textColor="@color/color_F34A55"
                android:textSize="@dimen/upgradle_dialog_subhead_title_text_size" />

            <include layout="@layout/dialog_center_content_layout" />
        </LinearLayout>

        <ImageView
            android:id="@+id/dialog_main_head_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/upgradle_dialog_head_image_height"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/upgradle_dialog_content_margin_left"
        android:layout_marginRight="@dimen/upgradle_dialog_content_margin_left"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_left_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/left_button_view_bg"
                android:gravity="center"
                android:textColor="@color/color_939393"
                android:textSize="@dimen/dialog_button_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dialog_right_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/right_button_view_bg"
                android:gravity="center"
                android:textColor="@color/color_F34A55"
                android:textSize="@dimen/dialog_button_text_size"
                android:visibility="gone" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dialog_close_button_margin_top">

            <ImageView
                android:id="@+id/dialog_close_icon"
                android:layout_width="@dimen/dialog_close_button_size"
                android:layout_height="@dimen/dialog_close_button_size"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/iv_close" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
